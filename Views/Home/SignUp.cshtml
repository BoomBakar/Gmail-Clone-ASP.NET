@using WebApplication4.Models
@model User

@{
    Layout = "_Layout";
}

    @section SignInUpFiles{ 
    <link type="text/css" rel="stylesheet" href="~/css/Sign.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
        <style>
            .cascading-right {
                margin-right: -50px;
            }
        </style>

        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);">
                        <center>
                            <div id="logo">
                                <a href="https://www.google.com/"><img src="~/images/logo.png" width="118" height="50" /></a>
                            </div>
                        </center>
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="fw-bold mb-5">Create a Gmail account</h2>

                            <form method="post" action="/Home/SignUp">

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example1">Name</label>
                                    <input asp-for="Name" type="text" id="form3Example1" class="form-control" />
                                    <span asp-validation-for="Name" style="color:red;"></span>
                                    
                                </div>
                                                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example3">Email address</label>
                                    <input asp-for="Email" type="email" id="form3Example3" class="form-control" />
                                    <span asp-validation-for="Email" style="color:red;"></span>
                                    @if (!ViewBag.unique)
                                    {
                                        <span style="color:red;margin-top:20px;"><b>Email already exists</b></span>
                                    }
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4">Password</label>
                                    <input asp-for="Password" type="password" id="form3Example4" class="form-control" />
                                    <span asp-validation-for="Password" style="color:red;"></span>
                                </div>



                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Sign Up
                                </button>
                           

                            </form>
                            <div id="info3"><a href="https://support.google.com/" />Need help?</a></div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
                         alt="" />
                </div>
            </div>
        </div>

    </section>
